# Server-side only; used by next.config.ts rewrites()
API_BASE_URL=http://localhost:8000

# Better Auth
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-here-min-32-chars
BETTER_AUTH_URL=http://localhost:3000

# Client-side Better Auth URL (MUST match BETTER_AUTH_URL in deployment)
# Falls back to http://localhost:3000 if not set
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# Trusted origins for CSRF protection (comma-separated)
# REQUIRED in deployment: set to your deployed frontend URL(s)
# Example: https://sorted.vercel.app,https://www.sorted.app
BETTER_AUTH_TRUSTED_ORIGINS=http://localhost:3000

# Database (PostgreSQL connection for Better Auth - standard pg format, NOT asyncpg)
# Format: postgresql://user:password@host/dbname?sslmode=require
AUTH_DATABASE_URL=postgresql://neon_user:neon_password@ep-xxxxxxxx-pooler.us-east-1.aws.neon.tech/sorted?sslmode=require

# Backend API URL (for client-side API calls)
NEXT_PUBLIC_API_URL=http://localhost:8000
